    "stylelint-order": "6.0.4",
    "stylelint-selector-bem-pattern": "4.0.0",
    "stylelint": "16.6.1",
    "turbo": "^1.13.4",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "typing-app/**/*.{js,ts,tsx}": [
      "eslint --config typing-app/.eslintrc.js --fix",
      "prettier --write"
    ]
