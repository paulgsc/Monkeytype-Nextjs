    "eslint-config-turbo": "^1.13.4",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-no-relative-import-paths": "^1.5.4",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
